<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FirebaseAuth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FirebaseAuth.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="LogOut">STUDENTCONNECT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var userToken = Context.Session.GetString("_UserToken");
                        }
                        @if (!string.IsNullOrEmpty(userToken))
                        {
                            @* TrackStatus for student *@
                            @if (ViewBag.ShowTrackStatus == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="TrackStatus">TrackStatus</a>
                                </li>
                            }

                            @* ViewStatus for admin *@
                            @if (ViewBag.ShowAdminStatusLink == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="StatusUpdate">StatusUpdate</a>
                                </li>
                            }

                            @if (ViewBag.ShowEmailDropdown == true)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="emailDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Send Email
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="emailDropdown">
                                        <li>
                                            <form asp-controller="Admin" asp-action="SendStudentCardEmail" method="post" style="margin:0;">
                                                <input type="hidden" name="studentNumber" value="@ViewBag.CurrentStudentNumber" />
                                                <button type="submit" class="dropdown-item">Card Email</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form asp-controller="Admin" asp-action="SendPhotoIssueEmail" method="post" style="margin:0;">
                                                <input type="hidden" name="studentNumber" value="@ViewBag.CurrentStudentNumber" />
                                                <button type="submit" class="dropdown-item">Photo Issue Email</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }

                            @* Log Out link *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">Log Out</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            StudentConnect
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
