@{
    ViewBag.Title = "Student Connect+";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="header">
        <span class="menu-icon">☰</span>
        <h1>SharePoint</h1>
        <span class="header-icons">🔍 ⋯ ❓</span>
    </div>

    <div class="profile-section">
        <div class="profile-pic">👤</div>
        <div class="welcome-text">Student Connect+</div>
        <div class="name-text">Welcome, @ViewBag.StudentName</div>
    </div>

    <div class="menu-grid">
        <div class="menu-item">
            <div class="menu-icon-circle">📝</div>
            <div class="menu-label">Assessments</div>
            <div class="menu-sublabel">View assessment details</div>
        </div>

        @Html.ActionLink("", "UploadPhoto", "Student", null, new { @class = "menu-item upload-link" })
        <div class="menu-item upload-link">
            <div class="menu-icon-circle">🖼️</div>
            <div class="menu-label">Upload Student Photo</div>
            <div class="menu-sublabel">Upload Student Photo</div>
        </div>

        <div class="menu-item">
            <div class="menu-icon-circle">📅</div>
            <div class="menu-label">Timetables</div>
            <div class="menu-sublabel">View student timetables</div>
        </div>

        <div class="menu-item">
            <div class="menu-icon-circle">📄</div>
            <div class="menu-label">Accounts</div>
            <div class="menu-sublabel">View student accounts</div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 400px;
        margin: 0 auto;
        background: white;
        min-height: 100vh;
    }

    .header {
        background: #2c3e50;
        color: white;
        padding: 15px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        .header h1 {
            font-size: 16px;
            font-weight: normal;
        }

    .menu-icon {
        font-size: 20px;
        cursor: pointer;
    }

    .profile-section {
        background: #34495e;
        color: white;
        padding: 20px;
        text-align: center;
    }

    .profile-pic {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: #bdc3c7;
        margin: 0 auto 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

    .welcome-text {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .name-text {
        font-size: 14px;
        opacity: 0.8;
    }

    .menu-grid {
        padding: 30px 20px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }

    .menu-item {
        text-align: center;
        cursor: pointer;
        padding: 20px;
        border-radius: 8px;
        transition: background-color 0.3s;
        text-decoration: none;
        color: inherit;
    }

        .menu-item:hover {
            background-color: #f8f9fa;
            text-decoration: none;
            color: inherit;
        }

    .menu-icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 2px solid #3498db;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        font-size: 24px;
        color: #3498db;
    }

    .menu-label {
        font-size: 14px;
        font-weight: bold;
        color: #2c3e50;
    }

    .menu-sublabel {
        font-size: 12px;
        color: #7f8c8d;
        margin-top: 5px;
    }

    .upload-link {
        display: block;
    }
</style>