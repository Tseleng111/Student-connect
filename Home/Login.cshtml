@model FirebaseAuth.Models.LoginModel

@{
    ViewData["Title"] = "Login - CUT Student Connect";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/cut-theme.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(0, 67, 120, 0.1) 0%, rgba(0, 92, 143, 0.1) 100%);
        }

        .login-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .login-hero {
            background: url('/images/cut-mahabane-building.jpg') center/cover no-repeat;
            height: 300px;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .login-hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(135deg, rgba(0, 67, 120, 0.85) 0%, rgba(0, 92, 143, 0.75) 100%);
            }

        .login-hero-content {
            position: relative;
            z-index: 1;
            text-align: center;
            color: white;
            padding: 20px;
        }

        .login-hero-logo {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            gap: 20px;
            margin-bottom: 20px;
            padding-left: 60px;
        }

            .login-hero-logo img {
                height: 250px;
                width: auto;
                background: white;
                padding: 10px;
            }

        .login-hero-text h1 {
            font-size: 2.5rem;
            margin: 0;
            font-weight: 700;
        }

        .login-hero-text p {
            font-size: 1.1rem;
            margin: 10px 0 0;
            opacity: 0.95;
        }

        .login-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
        }

        .login-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 67, 120, 0.15);
            padding: 40px;
            max-width: 900px;
            width: 90%;
            margin: 0 auto;
        }

            .login-card h2 {
                color: var(--cut-navy);
                text-align: center;
                margin-bottom: 30px;
                font-size: 1.8rem;
            }

        .input-group {
            position: relative;
            margin-bottom: 25px;
        }

            .input-group label {
                display: block;
                color: var(--cut-gray);
                margin-bottom: 8px;
                font-weight: 500;
                font-size: 0.95rem;
            }

        .input-wrapper {
            position: relative;
        }

        input.form-control {
            width: 100%;
            padding: 14px 45px 14px 15px;
            border-radius: 6px;
            border: 2px solid #e0e0e0;
            font-size: 1rem;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }

            input.form-control:focus {
                outline: none;
                border-color: var(--cut-blue);
                box-shadow: 0 0 0 3px rgba(0, 92, 143, 0.1);
            }

        .input-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--cut-blue);
            font-size: 22px;
            cursor: pointer;
            transition: color 0.3s ease;
        }

            .input-icon:hover {
                color: var(--cut-navy);
            }

        button.login-btn {
            width: 100%;
            background: linear-gradient(135deg, var(--cut-navy) 0%, var(--cut-blue) 100%);
            border: none;
            color: white;
            font-weight: 600;
            padding: 15px;
            border-radius: 6px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            button.login-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(0, 67, 120, 0.3);
            }

        .validation-summary-errors {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            padding: 15px;
            border-radius: 6px;
            margin-top: 20px;
            font-size: 0.9rem;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-left: 20px;
            }

        .login-footer {
            background: var(--cut-navy);
            color: white;
            text-align: center;
            padding: 20px;
        }

            .login-footer p {
                margin: 5px 0;
                font-size: 0.9rem;
            }

        @@media (max-width: 768px) {
            .login-hero {
                height: 250px;
            }

            .login-hero-text h1 {
                font-size: 1.8rem;
            }

            .login-hero-logo img {
                height: 100px;
                width: 100px;
            }

            .login-card {
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <!-- Hero Section -->
        <div class="login-hero">
            <div class="login-hero-content">
                <div class="login-hero-logo">
                    <img src="~/images/cut-logo.png" alt="CUT Logo" />
                    <div class="login-hero-text">
                        <h1>Student Connect+</h1>
                        <p>Central University of Technology</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Login Form -->
        <div class="login-container">
            <div class="login-card">
                <h2>Sign In</h2>
                <form asp-action="Login" method="post" class="form-container" onsubmit="return validateForm()">
                    <div class="input-group">
                        <input asp-for="UserIdentifier" class="form-control" id="userIdentifier" />
                        <span class="material-icons input-icon">person_outline</span>
                        <span id="userIdentifierError" class="field-validation-error" style="display:none;">Username required.</span>
                        <span id="studentWarning" class="field-validation-error" style="display:none; color:red;">
                            Student number must be 9 digits.
                        </span>
                    </div>

                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" id="password" />
                        <span class="material-icons input-icon" id="togglePassword" style="user-select:none;">visibility_off</span>
                        <span id="passwordError" class="field-validation-error" style="display:none;">Password required.</span>
                    </div>

                    <button type="submit" class="login-btn">Sign In</button>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="validation-summary-errors">
                            @Html.ValidationSummary()
                        </div>
                    }
                </form>
            </div>
        </div>

        <!-- Footer -->
        <div class="login-footer">
            <p>&copy; @DateTime.Now.Year Central University of Technology</p>
            <p>Bloemfontein Campus | Student Connect System</p>
        </div>
    </div>

    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');

        togglePassword.addEventListener('click', function () {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            this.textContent = type === 'password' ? 'visibility_off' : 'visibility';
        });

        const userIdentifier = document.getElementById('userIdentifier');
        const studentWarning = document.getElementById('studentWarning');

        userIdentifier.addEventListener('blur', function () {
            const value = userIdentifier.value.trim();

            if (/^\d+$/.test(value)) {
                if (/^\d{9}$/.test(value)) {
                    studentWarning.style.display = "none";
                } else {
                    studentWarning.style.display = "block";
                }
            } else {
                studentWarning.style.display = "none";
            }
        });

        function validateForm() {
            let isValid = true;

            const userIdentifier = document.getElementById('userIdentifier');
            const password = document.getElementById('password');
            const userIdentifierError = document.getElementById('userIdentifierError');
            const passwordError = document.getElementById('passwordError');

            if (userIdentifier.value.trim() === "") {
                userIdentifierError.style.display = "block";
                userIdentifier.style.borderColor = "red";
                isValid = false;
            } else {
                userIdentifierError.style.display = "none";
                userIdentifier.style.borderColor = "#e0e0e0";
            }

            if (password.value.trim() === "") {
                passwordError.style.display = "block";
                password.style.borderColor = "red";
                isValid = false;
            } else {
                passwordError.style.display = "none";
                password.style.borderColor = "#e0e0e0";
            }

            return isValid;
        }
    </script>
</body>
</html>
