@{
    ViewData["Title"] = "Upload Success";
    Layout = null;
    var processingTime = "1-2 working days";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/cut-theme.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .cut-header {
            background: linear-gradient(135deg, #003d6b 0%, #00567a 100%);
            padding: 20px 0;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .cut-header-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .cut-logo-section {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .cut-logo {
            height: 50px;
            width: auto;
        }

        .cut-header-text {
            color: white;
        }

            .cut-header-text h1 {
                margin: 0;
                font-size: 24px;
                font-weight: 600;
            }

            .cut-header-text p {
                margin: 5px 0 0 0;
                font-size: 14px;
                opacity: 0.9;
            }

        .cut-nav {
            display: flex;
            gap: 20px;
        }

            .cut-nav a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                gap: 8px;
                padding: 8px 16px;
                border-radius: 4px;
                transition: background-color 0.3s ease;
                font-size: 14px;
            }

                .cut-nav a:hover {
                    background-color: rgba(255, 255, 255, 0.2);
                }

        .cut-container {
            max-width: 100%;
            margin: 0 auto;
            padding: 50px 20px;
        }

        .cut-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            margin: 0 auto;
            max-width: 900px;
        }

        .success-content {
            padding: 60px 40px;
            text-align: center;
        }

        .success-icon {
            background: linear-gradient(135deg, #2e5d3c 0%, #3a7548 100%);
            width: 140px;
            height: 140px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            box-shadow: 0 4px 15px rgba(46, 93, 60, 0.3);
        }

            .success-icon img {
                width: 70px;
                height: 70px;
            }

        .success-title {
            color: #00567a;
            font-size: 28px;
            font-weight: 600;
            margin: 0 0 20px 0;
            line-height: 1.3;
        }

        .success-message {
            color: #555;
            font-size: 16px;
            line-height: 1.6;
            margin: 0 0 35px 0;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .info-section {
            background: #f0f7fb;
            border-left: 4px solid #00567a;
            padding: 25px 30px;
            border-radius: 8px;
            text-align: left;
            margin: 30px 0;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

            .info-section p {
                margin: 12px 0;
                color: #333;
                font-size: 15px;
            }

            .info-section strong {
                color: #00567a;
                font-weight: 600;
            }

        .button-container {
            margin-top: 40px;
            display: flex;
            flex-direction: column;
            gap: 12px;
            align-items: center;
        }

        .btn-primary {
            background: linear-gradient(135deg, #003d6b 0%, #00567a 100%);
            color: white;
            padding: 12px 40px;
            border: none;
            border-radius: 6px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            box-shadow: 0 2px 8px rgba(0, 86, 122, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0, 86, 122, 0.4);
            }

        .cut-footer {
            background: #003d6b;
            color: white;
            text-align: center;
            padding: 30px 20px;
            margin-top: 50px;
            font-size: 14px;
        }

            .cut-footer p {
                margin: 8px 0;
            }

        @@media (max-width: 768px) {
            .cut-header-container {
                flex-direction: column;
                gap: 20px;
                text-align: center;
            }

            .cut-nav {
                flex-direction: column;
                width: 100%;
            }

                .cut-nav a {
                    justify-content: center;
                    width: 100%;
                }

            .success-content {
                padding: 40px 25px;
            }

            .success-title {
                font-size: 24px;
            }

            .success-message {
                font-size: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="cut-header">
        <div class="cut-header-container">
            <div class="cut-logo-section">
                <img src="~/images/cut-logo.png" alt="CUT Logo" class="cut-logo" />
                <div class="cut-header-text">
                    <h1>Student Connect+</h1>
                    <p style="font-size: 1.4rem; margin-top: 10px; font-weight: 500; color: white;">Uploaded Successfully!</p>
                </div>
            </div>
            <div class="cut-nav">
                <a asp-action="StudentConnect" asp-controller="Home" style="font-size: 18px; padding: 10px 15px; display: inline-flex; align-items: center; gap: 6px;  color: white; border-radius: 6px; text-decoration: none;">
                    <span class="material-icons" style="vertical-align: middle; margin-right: 6px; font-size: 24px;">arrow_back</span>
                    Back to Dashboard
                </a>
              
                <a asp-action="LogOut" asp-controller="Home"
                   style="font-size: 18px; padding: 10px 15px; display: inline-flex; align-items: center; gap: 6px; color: white; border-radius: 6px; text-decoration: none; margin-left: 12px;">
                    <span class="material-icons" style="vertical-align: middle; margin-right: 6px; font-size: 24px;">logout</span>
                    Logout
                </a>
            </div>
        </div>
    </div>

    <!-- Success Content -->
    <div class="cut-container">
        <div class="cut-card">
            <div class="success-content">
                <!-- Success Icon -->
                <div class="success-icon">
                    <img src="~/images/right.png" alt="Success" />
                </div>

                <!-- Main Message -->
                <h1 class="success-title">Photo Successfully Uploaded!</h1>
                <p class="success-message">
                    Your student card photo has been submitted and is now being processed.
                    You will receive a notification once your student card is ready for collection.
                </p>

                <!-- Info Box -->
                <div class="info-section">
                    <p><strong>Processing Time:</strong> @processingTime</p>
                </div>

                <!-- Buttons Container -->
                <div class="button-container">
                    <!-- View Status Button -->
                    
                    
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="cut-footer">
        <p>&copy; @DateTime.Now.Year Central University of Technology</p>
        <p>Bloemfontein Campus | Student Number: @ViewBag.StudentNumber</p>
    </div>
</body>
</html>