@{
    ViewData["Title"] = "Update Student Status - Student Connect";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/cut-theme.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <style>

        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

            body > *:not(.cut-footer) {
                flex-shrink: 0;
            }

        .cut-box {
            flex: 1;
        }


        .cut-box {
            background: #fff;
            padding: 30px;
            margin: 40px auto;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 1100px;
        }

        h2 {
            color: #00567A;
            margin-bottom: 10px;
        }

        hr {
            border: none;
            border-top: 2px solid #00567A;
            margin-bottom: 20px;
            width: 100%;
        }

        /* TABLE STYLING */
        .table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            .table th {
                background-color: #00567A;
                color: white;
                padding: 12px;
                text-align: left;
                font-size: 0.95rem;
                font-weight: 600;
            }

            .table td {
                padding: 10px;
                border-bottom: 1px solid #ddd;
                vertical-align: middle;
            }

            .table tr:hover td {
                background-color: #f5f8ff;
            }

        select.form-control {
            padding: 6px 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
        }

        .btn-primary {
            background-color: #00567A;
            color: white;
            border: none;
            padding: 6px 14px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            transition: background 0.2s ease-in-out;
            margin-left: 5px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 4px;
        }

            .btn-primary:hover {
                background-color: #004460;
            }

        td form {
            display: flex;
            align-items: center;
            gap: 8px;
        }
    </style>

</head>
<body>
    <div class="cut-header">
        <div class="cut-header-container">
            <div class="cut-logo-section">
                <img src="~/images/cut-logo.png" alt="CUT Logo" class="cut-logo" />
                <div class="cut-header-text">
                    <h1>Student Connect+</h1>
                    <p style="font-size: 1.4rem; margin-top: 10px; font-weight: 500; color: white;">Status Update Portal</p>
                </div>
            </div>
            <div class="cut-nav">
                <a asp-action="AdminConnect" style="font-size: 18px; padding: 10px 15px; display: inline-flex; align-items: center; gap: 6px;  color: white; border-radius: 6px; text-decoration: none;">
                    <span class="material-icons" style="vertical-align: middle; margin-right: 6px; font-size: 24px;">arrow_back</span>
                    Back to Dashboard
                </a>
                

                <a asp-action="LogOut" asp-controller="Home"
                   style="font-size: 18px; padding: 10px 15px; display: inline-flex; align-items: center; gap: 6px; color: white; border-radius: 6px; text-decoration: none; margin-left: 12px;">
                    <span class="material-icons" style="vertical-align: middle; margin-right: 6px; font-size: 24px;">logout</span>
                    Logout
                </a>
             
            </div>
        </div>
    </div>

    <!-- HEADER / BANNER END -->

    <!-- MAIN CONTENT BOX -->
    <div class="cut-box">
        <h2>Update Student Status</h2>
        <hr />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Student Number</th>
                    <th>Full Name</th>
                    <th>Status</th>
                    <th>Update Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.StudentNumber</td>
                        <td>@student.FullName</td>
                        <td>@student.Status</td>
                        <td>
                            <form method="post" asp-action="StatusUpdate">
                                <input type="hidden" name="studentId" value="@student.Id" />
                                <select name="newStatus" class="form-control">
                                    <option value="Photo Submitted" selected="@(student.Status == "Photo Submitted")">Photo Submitted</option>
                                    <option value="Under Review" selected="@(student.Status == "Under Review")">Under Review</option>
                                    <option value="Ready For Collection" selected="@(student.Status == "Ready For Collection")">Ready For Collection</option>
                                </select>

                                <button type="submit" class="btn btn-primary">Update</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- EXISTING STATUS TABLE END -->
    </div>

    <!-- FOOTER START -->
    <div class="cut-footer">
        <p>&copy; @DateTime.Now.Year Central University of Technology</p>
        <p>Bloemfontein Campus | Student Connect System</p>
    </div>
    <!-- FOOTER END -->
</body>
</html>
